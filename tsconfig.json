{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "composite": true,
    "strict": true,
    "types": [
      "bun-types" // add Bun global
    ]
  },
  "include": ["./src"]
}
